<tr>
  <td>
    <%=
      link_to(
        bbs_thread_view.title,
        bbs_thread_view.title_link
      )
    %>
    <button
      type="button"
      id="<%= bbs_thread_view.delete_bbs_thread_button_id %>"
      data-url="<%= bbs_thread_view.delete_bbs_thread_path %>"
    >
      削除
    </button>
  </td>
</tr>


<script type="text/javascript">
  $(function(){
    $('#<%= bbs_thread_view.delete_bbs_thread_button_id %>')
    .click(function(){
      
      if (confirm('削除します\nよろしいですか？')){
      
        var $button = $(this);
        
        function sendDelete(){
          return $.ajax({
            beforeSend: function(request) {
              request.setRequestHeader("X-CSRF-Token", $('meta[name="csrf-token"]').attr('content'));
            },
            url: $button.attr('data-url'),
            type: 'delete',
          });
        };
        
        sendDelete()
        .done(function(){
          location.reload();
        })
        .fail(function(xhr){
          alert('通信エラーです');
        });
      
      } // if confirm
      
    });
  });
</script>