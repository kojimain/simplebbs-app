<div class="columns is-mobile">
  <div class="column is-8">
    <div class="box">
      <form
        id="top_bbs_posts_create_form"
        method="post"
        action="<%= create_view.form.url %>">
        <div class="field">
          <label class="label">本文</label>
          <div class="control">
            <textarea
             type="text"
             name="bbs_posts_create_form[body]"
             class="textarea"><%= create_view.form.body %></textarea>
          </div>
        </div>
        <div class="field">
          <label class="label">投稿者名</label>
          <div class="control">
            <input
             type="text"
             name="bbs_posts_create_form[poster_name]"
             value="<%= create_view.form.poster_name %>"
             class="input">
          </div>
        </div>
        <div class="field">
          <button
            type="submit"
            class="button is-info is-fullwidth">
            作成
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function(){
    
    $('#top_bbs_posts_create_form')
    .submit(function(event){
      event.preventDefault();
      
      var $form = $(this);
      
      function sendPost(){
        return $.ajax({
          beforeSend: function(request) {
            request.setRequestHeader("X-CSRF-Token", $('meta[name="csrf-token"]').attr('content'));
          },
          url: $form.attr('action'),
          type: $form.attr('method'),
          data: $form.serialize(),
        });
      };
      
      sendPost()
      .done(function(){
        location.reload();
      })
      .fail(function(xhr){
        var response = $.parseJSON(xhr.responseText);
        alert(response['messages']);
      });
      
    });
    
  });
</script>